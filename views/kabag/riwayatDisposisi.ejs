    <section class="home">
        <header class="navbar-atas p-3 mb-3 border-bottom">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <div class="dropdown text-end" style="margin-left: auto;">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/img/pp.png" alt="profile" width="32" height="32" class="rounded-circle"
                                id="profilePicture">
                        </a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="/profileKepalaBagian">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" type="button" id="logOut">Log out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div class="ps-4 pe-4">
            <h4 class="ms-4 fw-bold">Riwayat Permohonan Disposisi</h4>
            <h6 class="mt-0 ms-4 mb-5">Menu ini untuk melihat data riwayat disposisi anda.</h6>

            <div class="table-responsive">
                <table class="table table-responsive table-hover mx-auto" style="width: 96%;">
                    <thead>
                        <tr>
                            <th style="border-top-left-radius: 12px;">No</th>
                            <th>Pengirim</th>
                            <th>Status</th>
                            <th>Periode Magang</th>
                            <th>File Surat</th>
                            <th>Tanggal</th>
                            <th>Detail</th>
                            <th style="border-top-right-radius: 12px;">Aksi</th>
                        </tr>
                    </thead>
                    <tbody id="disposisiBody">
                        <tr>
                            <td colspan="8" class="text-center">Belum ada Riwayat Disposisi</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Modal detail surat -->
            <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title fw-bold" id="detailLabel">Detail Surat</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="row gx-3 gy-2 align-items-center mt-2 mb-2">
                                    <div class="col-sm-7">
                                        <h6>Pengirim</h6>
                                        <div class="input-group mb-3">
                                            <input type="text"
                                                class="form-control form-control-lg fs-6 rounded-4 input-div"
                                                id="pengirim" readonly>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <h6>Tanggal</h6>
                                        <div class="input-group mb-3">
                                            <input type="text"
                                                class="form-control form-control-lg fs-6 rounded-4 input-div"
                                                id="tanggal" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row gx-3 gy-2 align-items-center mt-2 mb-2">
                                    <div class="col-sm-7">
                                        <h6>Instansi</h6>
                                        <div class="input-group mb-3">
                                            <input type="text"
                                                class="form-control form-control-lg fs-6 rounded-4 input-div"
                                                id="instansi" readonly>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <h6>Jurusan</h6>
                                        <div class="input-group mb-3">
                                            <input type="text"
                                                class="form-control form-control-lg fs-6 rounded-4 input-div"
                                                id="jurusan" readonly>
                                        </div>
                                    </div>
                                </div>
                                <h6>File Surat Pengajuan</h6>
                                <div class="input-group mb-3">
                                    <a href="" id="fileSurat">Surat Permohonan Biro Organisasi.pdf</a>
                                </div>
                                <h6>Keterangan</h6>
                                <div class="input-group mb-3">
                                    <textarea class="form-control input-div" id="keterangan" rows="3"
                                        style="height: fit-content;" readonly></textarea>
                                </div>
                                <hr>
                                <div id="anggotaMagangContainer" class="mb-4">
                                    <h6>Anggota Magang</h6>
                                    <!-- Data anggota magang -->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal untuk file surat -->
            <div class="modal fade" id="fileModal" tabindex="-1" aria-labelledby="fileModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="fileModalLabel">File Surat</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <object id="fileObject" type="application/pdf" width="100%" height="500px"></object>
                        </div>
                    </div>
                </div>
            </div>

            
    </section>

